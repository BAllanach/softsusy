/** \file cache.cpp Helper functions for loading and evaluation of diagrams */
#include <string>
#include <fstream>
#include <vector>
#include <iterator>
#include <ginac/ginac.h>
#include "two_loop_thresholds/tau_corrections.hpp"

using namespace std;
using namespace GiNaC;

namespace tau_corrections {
	using namespace MSSM;

	const std::string data_prefix("@th_datadir@");
	const std::string tau_twoloop_yukawa_dec_name(data_prefix + "/tau_dec_2.gar");

	/*! \brief Evaluate \f${\mathcal O}(
	 * \alpha_y^2)\f$ decoupling correction
	 *
	 * \param params MSSM parameters at the scale \f$\bar\mu\f$
	 * \return \f$\frac{\Delta m_tau(\bar\mu)}{m_tau(\bar\mu)}\f$
	 * Note: you need to specify the value of scale \f$\bar\mu\f$ too.
	 *
	 */
	ex eval_tau_twoloop_yukawa_dec(const exmap &params)
	{
		static int refc;
		static exvector cache;
		if (refc++==0) {
			lst allsym = io_helper().getall();
			archive tmp_arch;
			ifstream tmp_file(tau_twoloop_yukawa_dec_name.c_str());
			tmp_file >> tmp_arch;
			tmp_file.close();
			ex curr(0);
			int n_exp = tmp_arch.num_expressions();
			for (int i=0; i<n_exp; i++) {
				try {
					string dummy_s;
					ex e = tmp_arch.unarchive_ex(allsym, dummy_s, i);
					curr += e;
				} catch (exception &ee) {
					throw std::runtime_error("Error while unarchiving " + tau_twoloop_yukawa_dec_name);
				}
			}
			cache.push_back(curr);
			}
		exvector::const_iterator ebeg=cache.begin();
		exvector::const_iterator eend=cache.end();
		exvector::const_iterator eit=ebeg;
		ex res(0);
		while (eit!=eend)
		{
			res += eit->subs(params).evalf();
			++eit;
		}
		res = res*pow(4*Pi,-4);
		res = res.evalf();
		return res;
	}

} // namespace tau_corrections


